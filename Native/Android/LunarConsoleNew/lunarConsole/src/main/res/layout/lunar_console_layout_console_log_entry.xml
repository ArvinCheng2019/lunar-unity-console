<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lunar_console_log_entry_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lunar_console_color_cell_background_dark">

    <TextView
        android:id="@+id/lunar_console_log_entry_message"
        style="@style/lunar_console_log_details_message_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableStart="@drawable/lunar_console_icon_log"
        android:drawableLeft="@drawable/lunar_console_icon_log"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:padding="8dp"
        tools:text="Some really long message which would not fit the screen and would be broken into multiple lines" />

    <TextView
        android:id="@+id/lunar_console_log_collapsed_count"
        style="@style/lunar_console_log_details_collapsed_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        tools:text="999+" />

</FrameLayout>