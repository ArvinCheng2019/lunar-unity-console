<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lunar_console_action_entry_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lunar_console_color_cell_background_dark"
    android:gravity="center">

    <TextView
        android:id="@+id/lunar_console_settings_property_name"
        style="@style/lunar_console_variable_style"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Property" />

    <EditText
        android:id="@+id/lunar_console_settings_property_value"
        android:imeOptions="actionDone"
        style="@style/lunar_console_variable_value_style" />

    <Button
        android:id="@+id/lunar_console_settings_property_button"
        style="@style/lunar_console_variable_value_style" />

    <spacemadness.com.lunarconsole.ui.Switch
        android:id="@+id/lunar_console_settings_property_switch"
        style="@style/lunar_console_switch_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>